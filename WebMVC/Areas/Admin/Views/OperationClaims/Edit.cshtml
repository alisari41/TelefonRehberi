@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model Core.Entities.Concrete.OperationClaim

@{
    ViewData["Title"] = "Rolleri Güncelle";
    var success = ViewBag.Success;
    var message = ViewBag.Message;
    var error = ViewBag.Error;
}


<h2>Rolleri Güncelle</h2>
<hr />

<form asp-action="Edit" method="post" class="form-horizontal">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label class="control-label col-md-3">Rol Adı</label>
        <div class="col-md-9">
            <input type="text" asp-for="Name" class="form-control text-info" />
            <span asp-validation-for="Name" class="text-danger"></span>
            
            <p>@message</p>
            <p>@success</p>
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-3 col-md-9">
            <button class="btn btn-outline-success " style="margin-left: 5px;">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pen-fill" viewBox="0 0 16 16">
                    <path d="m13.498.795.149-.149a1.207 1.207 0 1 1 1.707 1.708l-.149.148a1.5 1.5 0 0 1-.059 2.059L4.854 14.854a.5.5 0 0 1-.233.131l-4 1a.5.5 0 0 1-.606-.606l1-4a.5.5 0 0 1 .131-.232l9.642-9.642a.5.5 0 0 0-.642.056L6.854 4.854a.5.5 0 1 1-.708-.708L9.44.854A1.5 1.5 0 0 1 11.5.796a1.5 1.5 0 0 1 1.998-.001z"/>
                </svg> Rölü Güncelle
            </button>
        </div>
    </div>
</form>


<p>@error</p>

<a asp-action="Index" class="btn btn-outline-warning mb-2 ml-2">
    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-skip-backward-btn-fill" viewBox="0 0 16 16">
        <path d="M0 12V4a2 2 0 0 1 2-2h12a2 2 0 0 1 2 2v8a2 2 0 0 1-2 2H2a2 2 0 0 1-2-2zm11.21-6.907L8.5 7.028V5.5a.5.5 0 0 0-.79-.407L5 7.028V5.5a.5.5 0 0 0-1 0v5a.5.5 0 0 0 1 0V8.972l2.71 1.935a.5.5 0 0 0 .79-.407V8.972l2.71 1.935A.5.5 0 0 0 12 10.5v-5a.5.5 0 0 0-.79-.407z" />
    </svg> Geri Dön
</a>