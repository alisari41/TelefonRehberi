@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@using FormHelper
@model WebMVC.Models.FotografEkle

@{ ViewData["Title"] = "Rehbere Kişi Ekle";
    var success = ViewBag.Success;
    var message = ViewBag.Message;
    var error = ViewBag.Error; }

<br />
<h2>Rehbere Kişi Ekle</h2>
<hr />

<form asp-action="Add" method="post" class="form-horizontal" enctype="multipart/form-data">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="form-group">
        <label class="control-label col-md-3">Adres Id</label>
        <div class="col-md-9">
            <input type="number" asp-for="AddressId" class="form-control text-info" />
            <span asp-validation-for="AddressId" class="text-danger"></span>
            @message
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-md-3">Ad</label>
        <div class="col-md-9">
            <input type="text" asp-for="FirstName" class="form-control text-info" />
            <span asp-validation-for="FirstName" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-md-3">Soyad</label>
        <div class="col-md-9">
            <input type="text" asp-for="LastName" class="form-control text-info" />
            <span asp-validation-for="LastName" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-md-3">Ünvan</label>
        <div class="col-md-9">
            <input type="text" asp-for="Title" class="form-control text-info" />
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-md-3">Email</label>
        <div class="col-md-9">
            <input type="text" asp-for="Email" placeholder="alisari41@outlook.com" class="form-control text-info" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-md-3">Resim Seçiniz</label>
        <div class="col-md-9">
            
            <input type="file" name="PhotoUrl" asp-for="PhotoUrl" class="form-control text-info" />
            @*<input type="text" asp-for="PhotoUrl" class="form-control text-info"/>*@
            <span asp-validation-for="PhotoUrl" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-md-3">Telefon Numarası</label>
        <div class="col-md-9">
            <input type="text" asp-for="PhoneNumber" placeholder="+90 534 082 9924" class="form-control text-info" />
            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-md-3">Fax Numarası</label>
        <div class="col-md-9">
            <input type="text" asp-for="Fax" placeholder="534 082 9924" class="form-control text-info" />
            <span asp-validation-for="Fax" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-md-3">Dahili Numara</label>
        <div class="col-md-9">
            <input type="number" asp-for="InternalNumber" class="form-control text-info" />
            <span asp-validation-for="InternalNumber" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-3 col-md-9">
            <button class="btn btn-default guncellemebuton" style="margin-left: 5px; border: 2px solid #4db3ff;">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-telephone-plus-fill" viewBox="0 0 16 16">
                    <path fill-rule="evenodd" d="M1.885.511a1.745 1.745 0 0 1 2.61.163L6.29 2.98c.329.423.445.974.315 1.494l-.547 2.19a.678.678 0 0 0 .178.643l2.457 2.457a.678.678 0 0 0 .644.178l2.189-.547a1.745 1.745 0 0 1 1.494.315l2.306 1.794c.829.645.905 1.87.163 2.611l-1.034 1.034c-.74.74-1.846 1.065-2.877.702a18.634 18.634 0 0 1-7.01-4.42 18.634 18.634 0 0 1-4.42-7.009c-.362-1.03-.037-2.137.703-2.877L1.885.511zM12.5 1a.5.5 0 0 1 .5.5V3h1.5a.5.5 0 0 1 0 1H13v1.5a.5.5 0 0 1-1 0V4h-1.5a.5.5 0 0 1 0-1H12V1.5a.5.5 0 0 1 .5-.5z" />
                </svg>&nbsp; Rol Ekle
            </button>
        </div>
    </div>
</form>
<a asp-action="Index" class="btn btn-outline-warning mb-2 ml-2">
