@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model List<Entities.Concrete.Deneme>

@{ ViewData["Title"] = "Telefon Rehberi"; }




<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Telefon Rehberi</h3>

                <div class="card-tools">
                    <div class="input-group input-group-sm" style="width: 150px;">
                        <input type="text" name="table_search" class="form-control float-right" placeholder="Search">

                        <div class="input-group-append">
                            <button type="submit" class="btn btn-default">
                                <i class="fas fa-search"></i>
                            </button>
                        </div>
                    </div>
                </div>
            </div>
            <!-- /.card-header -->
            <div class="card-body table-responsive p-0">
                <table class="table table-hover text-nowrap">
                    <thead>
                    <tr>

                        <th>
                            Adres
                        </th>
                        <th>
                            Ad
                        </th>
                        <th>
                            Soyad
                        </th>
                        <th>
                            Ünvan
                        </th>
                        <th>
                            Email
                        </th>
                        <th>
                            Fotoğref Url
                        </th>
                        <th>
                            Telefon Numarası
                        </th>
                        <th>
                            Fax Numarası
                        </th>
                        <th>
                            Dahili Numara
                        </th>
                        <th>Güncelle</th>
                        <th>Sil</th>
                    </tr>
                    </thead>
                    <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @item.FirstName
                            </td>
                            <td>

                                @*@Html.DisplayFor(modelItem => item.AddressId)*@
                                @Html.DisplayFor(modelItem => item.Mahalle) Mahallesi

                                @if (@item.Cadde != null)
                                {
                                    @Html.DisplayFor(modelItem => item.Cadde)
                                    <small> Caddesi</small>}

                                @Html.DisplayFor(modelItem => item.Sokak) Sokağı
                                No: @Html.DisplayFor(modelItem => item.BinaNo)
                                @Html.DisplayFor(modelItem => item.İlce)/
                                @Html.DisplayFor(modelItem => item.İl)
                                Posta kodu: @Html.DisplayFor(modelItem => item.PostaKodu)

                            </td>

                            <td>
                                @Html.DisplayFor(modelItem => item.FirstName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.LastName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Title)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Email)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.PhotoUrl)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.PhoneNumber)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Fax)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.InternalNumber)
                            </td>

                        </tr>


                    }
                    </tbody>
                </table>
            </div>
            <!-- /.card-body -->
        </div>
        <!-- /.card -->
    </div>
</div>